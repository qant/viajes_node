extends ./layout/index

block content
    main.container.mt-5
        div.text-center
            h1=title
            p #{description}

            if (errors) 
                each error in errors
                    p.alert.alert-danger=error
                //p= JSON.stringify(errors)
        .row


            h2.d-block.w-100.text-center Add the Review

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimonials" method="post") 
                        .form-group
                            label(for="name") Name 
                            input#name(type="text", placeholder="Your Name", name="name", class="form-control" value=name)
                        .form-group
                            label(for="email") Email 
                            input#email(type="text", placeholder="Your email", name="email", class="form-control" value=email)
                        .form-group
                            label(for="message") Message 
                            textarea#message(class="form-control", name="message", placeholder="Your message", row=3, )=message
                        input.btn.btn-success.btn-block(type="submit", value="Send")