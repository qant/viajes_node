extends ./layout/index

block content
    main.container.mt-5
        div.text-center
            h1=title
            p #{description}
        if (testimonials)
            //p= JSON.stringify(testimonials)
            blockquote.text-center What our clients saying about us
            .row.testimoniales             
                each testimonial in testimonials
                    .col-md-6.col-lg-4.mb-4 
                        .card
                            .card-body 
                                blockquote.blockquote 
                                p.mb-0 
                                    | #{testimonial.message}
                                footer.blockquote-footer
                                    | #{testimonial.name}                                
                
        if (errors) 
            each error in errors
                p.alert.alert-danger=error
            //p= JSON.stringify(errors)
        .row


            h2.d-block.w-100.text-center Add the Review

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimonials" method="post") 
                        .form-group
                            label(for="name") Name 
                            input#name(type="text", placeholder="Your Name", name="name", class="form-control" value=name)
                        .form-group
                            label(for="email") Email 
                            input#email(type="text", placeholder="Your email", name="email", class="form-control" value=email)
                        .form-group
                            label(for="message") Message 
                            textarea#message(class="form-control", name="message", placeholder="Your message", row=3, )=message
                        input.btn.btn-success.btn-block(type="submit", value="Send")